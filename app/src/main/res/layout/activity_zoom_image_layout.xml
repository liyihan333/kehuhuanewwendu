<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.kwsoft.kehuhua.widget.CommonToolbar
        android:id="@+id/common_toolbar"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@android:color/transparent"
        app:isShowTitle="true">
    </com.kwsoft.kehuhua.widget.CommonToolbar>

    <com.kwsoft.kehuhua.view.ZoomableDraweeView
        android:id="@+id/my_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        fresco:failureImage="@mipmap/jiazaishibai"
        fresco:progressBarImage="@mipmap/jiazaizhong"
        fresco:progressBarAutoRotateInterval="5000"
        fresco:roundedCornerRadius="12dp"
        fresco:roundTopLeft="true"
        fresco:roundTopRight="true"
        fresco:roundBottomLeft="true"
        fresco:roundBottomRight="true"
        />

</LinearLayout>
