<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="0.5dp"
            android:src="@mipmap/classroom_time" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="2015-10-23"
            android:textColor="@color/list_item_left"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:layout_width="0.5dp"
        android:layout_height="5dp"
        android:layout_marginTop="3dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/tv_c2c2c2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_stage_text_item"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp">

            <TextView
                android:layout_width="2dp"
                android:layout_height="16dp"
                android:background="@color/title_bg" />

            <LinearLayout
                android:id="@+id/ll_iv"
                android:layout_width="61dp"
                android:layout_height="75dp"
                android:layout_marginLeft="13dp"
                android:background="@drawable/bg_stage_text_item_sec"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="5dp"
                    android:src="@mipmap/icon_classroom_course_list_item" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="少儿英语"
                    android:textColor="#104892"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="7dp"
                android:layout_toRightOf="@+id/ll_iv"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="少儿一对一英语基础班"
                    android:textColor="#4c4c4c"
                    android:textSize="18sp" />

                <!--<ImageView-->
                    <!--android:layout_width="18dp"-->
                    <!--android:layout_height="18dp"-->
                    <!--android:src="@mipmap/basics_into" />-->
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="18dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/teach_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="老师姓名"
                android:textColor="@color/list_item_right"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_teach_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="李明费"
                android:textColor="@color/list_item_left"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/teach_content_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="教学内容"
                android:textColor="@color/list_item_right"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_teach_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="李明费李明费李明费李明费李明费李明费李明费李明费"
                android:textColor="@color/list_item_left"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="30dp"
            android:background="@color/e7e7">

        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_attence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="考勤"
                    android:textColor="@color/tv_15c871"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_attence"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="9dp"
                    android:src="@mipmap/classroom_ok_course_list_item" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_homework"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课后作业"
                android:textColor="@color/stu_topBarColor"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_homework"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="9dp"
                android:src="@mipmap/classroom_no_course_list_item" />

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="0.5dp"
        android:layout_height="9dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/tv_c2c2c2"/>
</LinearLayout>