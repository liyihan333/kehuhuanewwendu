<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="7dp"
    android:layout_marginLeft="@dimen/text_size_10"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="6dp"
    >

    <CheckBox
        android:id="@+id/cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginRight="5dp"
        android:button="@null"
        android:visibility="gone"
        android:background="@drawable/stu_list_checkbox"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_list_item_background"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/cb"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            >
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="标题"
                android:textColor="#333333"
                />

            <TextView
                android:id="@+id/iv_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:background="@drawable/no_read"
                android:text="未读"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_persion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="销售01"
            android:textSize="@dimen/text_size_15"
            android:layout_marginTop="18dp"
            android:textColor="#5b5b5b"
            />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="内容"
            android:textColor="#858585"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="23dp"
            android:layout_below="@+id/tv_title"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/xuxian"
            android:layerType="software"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_size_9"
            android:layout_marginBottom="4dp"
            >

            <TextView
                android:id="@+id/tv_read_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="阅读全文"
                android:textSize="14dp"
                android:textColor="#858585"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_nextpage"
                />

            <ImageView
                android:id="@+id/iv_nextpage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:background="@mipmap/go_item"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000-08-10"
                android:textColor="#858585"
                android:textSize="@dimen/text_size_14"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
