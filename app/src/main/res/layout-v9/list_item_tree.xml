<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="40dp"
    android:background="@color/lightblue">

    <ImageView
        android:id="@+id/id_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/tree_ec" />

<CheckBox
    android:id="@+id/tree_check"
    android:layout_centerVertical="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toEndOf="@id/id_item_icon"
    android:shadowColor="@color/blueviolet"
    android:focusable="false"
    />
    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/id_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tree_check"
        android:text="hello_world"
        android:textColor="@color/black"
        android:textSize="18sp" />

</RelativeLayout>